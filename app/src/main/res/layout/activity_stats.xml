<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3E0"
    android:padding="16dp">

    <ImageView
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/logovolver"
        android:contentDescription="Volver"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estadísticas"
        android:textSize="24sp"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textViewSubtitleUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/userStatsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/textViewSubtitleUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewTopSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Canción más escuchada:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/textViewTopSongValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[Nombre de la canción más escuchada]"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textViewTopAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Álbum más escuchado:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/textViewTopAlbumValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[Nombre del álbum más escuchado]"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textViewTopArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artista más escuchado:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/textViewTopArtistValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[Nombre del artista más escuchado]"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewSubtitleGlobal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Global"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/userStatsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/globalStatsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/textViewSubtitleGlobal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewGlobalTopSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Canción más escuchada:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/textViewGlobalTopSongValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[Nombre de la canción más escuchada globalmente]"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textViewGlobalTopAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Álbum más escuchado:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/textViewGlobalTopAlbumValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[Nombre del álbum más escuchado globalmente]"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textViewGlobalTopArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artista más escuchado:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/textViewGlobalTopArtistValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[Nombre del artista más escuchado globalmente]"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
